@model SpacePirateInventory.Models.Tables.Article
@{
    ViewBag.Title = "Add";
}

@if (ViewBag.displayMenu == "Yes")
{
    @Html.ActionLink("Back to Article List", "Articles", "Admin")
    <h2 class="mt-5">Add Article</h2>


    <div class="row">
        <div class="col-xs-12 col-md-6 col-lg-6">

            @using (Html.BeginForm("Add", "User", FormMethod.Post, new { enctype = "multipart/form-data", id = "FormAddArticle" }))
            {
                @Html.ValidationSummary()
                <div id="ArticleForm">
                    <div class="form-group">
                        <label>Article Title</label>
                        @Html.TextBoxFor(i => i.ArticleTitle, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Article Body</label>
                        @Html.TextAreaFor(i => i.ArticleContent, new { @class = "form-control" })
                    </div>
                    <button class="btn btn-primary">Save</button>
                </div>
