                    </div>*@
            }
        </div>
    </div>

    @section scripts{
        <script>
            $(document).ready(function () {
                $("#ArticleForm").submit(function (e) {
                    rules: {
                        'ArticleTitle': {
                            required: true
                        },
                    'ArticleContent': {
                        required: true,

                    }

                        }
                    });
                });

        </script>
    }

}
